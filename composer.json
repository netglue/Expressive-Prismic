{
    "name": "netglue/expressive-prismic",
    "description": "Module/Library for creating content driven websites with prismic.io and Zend Expressive",
    "type": "module",
    "license": "MIT",
    "authors": [
        {
            "name": "George Steel",
            "email": "george@net-glue.co.uk"
        }
    ],
    "autoload": {
        "psr-4": {
            "ExpressivePrismic\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ExpressivePrismicTest\\": "test/ExpressivePrismic"
        }
    },
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1",
        "http-interop/http-middleware": "^0.4",
        "prismic/php-sdk": "^3.4",
        "zendframework/zend-expressive": "^2",
        "zendframework/zend-expressive-router" : "2.3.*",
        "zendframework/zend-expressive-helpers": "^4.0",
        "zendframework/zend-http": "^2.5",
        "zendframework/zend-paginator": "^2.8",
        "zendframework/zend-stdlib": "^3.0",
        "zendframework/zend-view": "^2.8"
    },
    "require-dev" : {
        "phpstan/phpstan": "^0.9.1",
        "phpunit/phpunit": "^6",
        "zendframework/zend-expressive-fastroute": "^2.0",
        "zendframework/zend-servicemanager": "^3.3"
    },
    "extra": {
        "zf": {
            "config-provider": "ExpressivePrismic\\ConfigProvider"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "check" : [
            "@check-phpstan"
        ],
        "check-phpstan": "vendor/bin/phpstan analyse --level max -c phpstan.neon src test"
    }
}
